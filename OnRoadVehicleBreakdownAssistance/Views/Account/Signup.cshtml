@model OnRoadVehicleBreakdownAssistance.User

@{
    ViewBag.Title = "Signup";
}

<style>
    .body-background {
        background-image: url('/Content/Images/signupBackground.png');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: 100% 100%;
        border-color: #333;
    }
    .textbox {
        width: 28%;
        padding: 8px 20px;
        margin: 8px 0;
        display: inline-block;
        border-radius: 25px;
        box-sizing: border-box;
        opacity: 0.3;
    }
    input[type=submit] {
        width: 28%;
        background-color: #111;
        color: white;
        padding: 8px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 25px;
        cursor: pointer;
    }
    .center {
        margin: auto;
        width: 80%;
        padding: 135px;
    }
    input[type=submit]:hover {
        background-color: #252623;
    }

    .signup {
        background-color: dodgerblue;
        width: 6%;
    }

</style>

<div class="center">

    <h2>Signup</h2>

    <b>Please fill in this form to create an account</b>
    <br />
    <br />

    @using (Html.BeginForm("Signup", "Account"))
    {
        @Html.AntiForgeryToken()

        <div class="body-background">
            <div>
                <h3>@Html.LabelFor(model => model.Username)<br/>
                    @Html.TextBoxFor(model => model.Username, new { @Class = "textbox" })
                    @Html.ValidationMessageFor(model => model.Username)</h3>

                <h3>@Html.LabelFor(model => model.Password)<br />
                    @Html.PasswordFor(model => model.Password, new { @Class = "textbox" })
                    @Html.ValidationMessageFor(model => model.Password)</h3>
            </div>

            <div>
                <div>
                    <h4>
                        <input type="checkbox" name="Checkbox"/>
                        By creating an account you agree to our @Html.ActionLink(" Terms", "Terms", "Home")
                        @Html.ValidationMessage("Checkbox")
                    </h4>
                    <input type="submit" value="Signup" />
                </div>
            </div>
        </div>
    }

    <div>
        <h3 style="padding-left:40px;">Already have an account?@Html.ActionLink(" Login", "Login")</h3>
    </div>
</div>

